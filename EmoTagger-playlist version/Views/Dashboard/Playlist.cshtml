@model EmoTagger.Models.MusicViewModel

<main class="main-content">
    <div class="position-relative">
        <div class="content-inner container-fluid pb-0" id="page_layout">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="card mb-0 bg-soft-secondary">
                                        <img src="../assets/images/dashboard/01.png" class="img-fluid w-100" alt="">
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="d-flex align-items-top justify-content-between">
                                        <div class="music-detail">
                                            <h3 class="mb-3">Eliana D’cruz Playlist</h3>
                                            <p class="mb-3">Search for your favorite music, create a playlist and save it.</p>
                                            <div class="d-flex align-items-center mb-4">
                                                <h6 class="ps-3 fw-bold me-3 border-start">@Model.Playlist.Count Tracks</h6>
                                            </div>
                                            <form method="get">
                                                <div class="input-group">
                                                    <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search for a song" />
                                                    <button class="btn btn-warning">Search</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.AvailableSongs != null && Model.AvailableSongs.Any())
                    {
                        <div class="card mt-4">
                            <div class="card-body">
                                <h5>Search Results</h5>
                                <ul class="list-group">
                                    @foreach (var song in Model.AvailableSongs)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @song.Title - @song.Artist
                                            <form asp-action="AddToPlaylist" method="post" class="mb-0">
                                                <input type="hidden" name="userId" value="@Model.UserId" />
                                                <input type="hidden" name="musicId" value="@song.MusicId" />
                                                <button class="btn btn-success btn-sm">Add</button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }

                    <div class="card mt-4">
                        <div class="card-body px-0">
                            <h5>Your Playlist</h5>
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th scope="col">Artist</th>
                                            <th scope="col">Album</th>
                                            <th scope="col">Time</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var song in Model.Playlist)
                                        {
                                            <tr>
                                                <td>@song.Artist</td>
                                                <td>@song.Album</td>
                                                <td>@song.Time</td>
                                                <td>
                                                    <form asp-action="RemoveFromPlaylist" method="post" class="mb-0">
                                                        <input type="hidden" name="userId" value="@Model.UserId" />
                                                        <input type="hidden" name="musicId" value="@song.MusicId" />
                                                        <button class="btn btn-danger btn-sm">Remove</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>
