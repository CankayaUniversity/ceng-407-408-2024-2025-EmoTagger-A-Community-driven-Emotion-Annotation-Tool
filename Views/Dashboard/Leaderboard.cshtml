@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sayfalama işlevselliği
            const paginationLinks = document.querySelectorAll('.pagination .page-link');
            paginationLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    if (!this.parentElement.classList.contains('disabled') && !this.parentElement.classList.contains('active')) {
                        e.preventDefault();
                        // Aktif sayfanın sınıfını kaldır
                        document.querySelector('.pagination .page-item.active').classList.remove('active');

                        // Yeni aktif sayfayı işaretle
                        this.parentElement.classList.add('active');

                        // Gerçek bir uygulamada burada ajax çağrısı yapılabilir
                        // Şimdilik sadece animasyon gösterelim
                        const tableBody = this.closest('.tab-pane').querySelector('tbody');
                        tableBody.style.opacity = '0.5';

                        setTimeout(() => {
                            tableBody.style.opacity = '1';
                        }, 500);
                    }
                });
            });

            // Kullanıcı profili hover efekti
            const userAvatars = document.querySelectorAll('.user .avatar img');
            userAvatars.forEach(avatar => {
                avatar.addEventListener('mouseenter', function() {
                    this.parentElement.parentElement.classList.add('user-hover');
                });

                avatar.addEventListener('mouseleave', function() {
                    this.parentElement.parentElement.classList.remove('user-hover');
                });
            });

            // Haftalık şampiyonların animasyonu
            const trophies = document.querySelectorAll('.trophy');
            trophies.forEach(trophy => {
                setInterval(() => {
                    trophy.style.transform = 'scale(1.2)';
                    setTimeout(() => {
                        trophy.style.transform = 'scale(1)';
                    }, 300);
                }, 3000);
            });
        });
