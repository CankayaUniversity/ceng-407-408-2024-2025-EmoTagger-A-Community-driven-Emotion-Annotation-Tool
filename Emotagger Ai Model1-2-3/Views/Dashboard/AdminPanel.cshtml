@{
    ViewData["Title"] = "Admin Panel";
}

<h2 class="mb-3">Admin Panel</h2>

<!-- Button Group -->
<div class="d-flex gap-2 mb-4">
    <button type="button" class="btn btn-danger" onclick="showModel('model1Table')">Model 1</button>
    <button type="button" class="btn btn-info" onclick="showModel('model2Table')">Model 2</button>
    <button type="button" class="btn btn-success" onclick="showModel('model3Table')">Model 3</button>
</div>


<!-- Model 1 Table -->
<div id="model1Table" style="display:none;">
    <p class="text-muted">Predicted emotions (Model 1 – based on user tags):</p>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                @Html.Raw(
                         ViewBag.EmotionHtml1?.ToString()
                         .Replace("<table", "<table class='table table-bordered table-striped'")
                         .Replace("<thead>", "<thead class='table-dark'>")
                         )
            </div>
        </div>
    </div>
</div>

<!-- Model 2 Table -->
<div id="model2Table" style="display:none;">
    <p class="text-muted">Predicted emotions (Model 2 – based on audio analysis):</p>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                @Html.Raw(
                         ViewBag.EmotionHtml2?.ToString()
                         .Replace("<table", "<table class='table table-bordered table-striped'")
                         .Replace("<thead>", "<thead class='table-primary'>")
                         )
            </div>
        </div>
    </div>
</div>

<!-- Model 3 Table -->
<div id="model3Table" style="display:none;">
    <p class="text-muted">Predicted emotions (Model 3 – based on lyrics transcription):</p>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                @Html.Raw(
                         ViewBag.EmotionHtml3?.ToString()
                         .Replace("<table", "<table class='table table-bordered table-striped'")
                         .Replace("<thead>", "<thead class='table-success'>")
                         )
            </div>
        </div>
    </div>
</div>

<!-- Script to toggle -->
<script>
    function showModel(modelId) {
        const allTables = ['model1Table', 'model2Table', 'model3Table'];
        allTables.forEach(id => {
            document.getElementById(id).style.display = (id === modelId) ? 'block' : 'none';
        });
    }
</script>
