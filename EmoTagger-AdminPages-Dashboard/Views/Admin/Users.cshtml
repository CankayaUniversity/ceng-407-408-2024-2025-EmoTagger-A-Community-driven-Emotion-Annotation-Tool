@model IEnumerable<EmoTagger.Models.User>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Shared/_Layout.cshtml"; // veya özel admin layout'un varsa onu kullan
}

<h2>Kullanıcı Listesi</h2>
<div class="btn-group mb-4">
    <a class="btn btn-outline-primary" href="/Admin/Dashboard">Dashboard</a>
    <a class="btn btn-outline-primary" href="/Admin/Users">Kullanıcılar</a>
    <a class="btn btn-outline-primary" href="/Admin/Musics">Müzikler</a>
</div>

<form method="get" asp-action="Users" class="d-flex mb-3" role="search">
    <input type="text" name="search" class="form-control me-2" placeholder="Kullanıcı ara..." value="@ViewBag.Search" />
    <button type="submit" class="btn btn-primary me-2">Ara</button>
    @if (!string.IsNullOrWhiteSpace(ViewBag.Search as string))
    {
        <a href="/Admin/Users" class="btn btn-secondary">Temizle</a>
    }
</form>


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Ülke</th>
            <th>Kayıt Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Country</td>
                <td>@user.CreatedAt.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
