<!doctype html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title data-setting="app_name" data-rightJoin="Responsive Bootstrap 5 Admin Dashboard Template">Muzik Responsive Bootstrap 5 Admin Dashboard Template</title>
        <meta name="description" content="Muzik is a revolutionary Bootstrap Admin Dashboard Template and UI Components Library. The Admin Dashboard Template and UI Component features 8 modules.">
        <meta name="keywords" content="premium, admin, dashboard, template, bootstrap 5, clean ui, muzik, admin dashboard,responsive dashboard, optimized dashboard,">
        <meta name="author" content="Iqonic Design">
        <meta name="DC.title" content="Muzik Responsive Bootstrap 5 Admin Dashboard Template">
    </head>
    <body>
        <!-- loader Start -->
        <div id="loading">
            <div class="loader simple-loader">
                <div class="loader-body ">
                    <img src="../assets/images/loader.gif" alt="loader" class=" img-fluid ">
                </div>
            </div>
        </div>
        <!-- loader END -->

        <div class="sidebar-body pt-0 data-scrollbar">
            <div class="sidebar-list">
            </div>
            <div class="sidebar-footer">
            </div>
        </div>

        <main class="main-content">
            <div class="position-relative">
                <div class="content-inner container-fluid pb-0" id="page_layout">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="card mb-0 bg-soft-secondary">
                                                <img src="../assets/images/dashboard/01.png" class="img-fluid w-100" alt="">
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="d-flex align-items-top justify-content-between">
                                                <div class="music-detail">
                                                    <h3 class="mb-3">Eliana D’cruz Playlist</h3>
                                                    <p class="mb-3">Search for your favorite music, create a playlist and save it.</p>
                                                    <div class="d-flex align-items-center mb-4">
                                                        <h6 class="ps-3 fw-bold me-3 border-start">15 Tracks</h6>
                                                        <h6 class="ps-3 fw-bold border-start">03:00 Duration</h6>
                                                    </div>
                                                    <div class="d-flex align-items-center">
                                                        <a href="javascript:void(0);" class="btn btn-primary">Play Musics</a>
                                                        <a href="javascript:void(0);" class="btn btn-outline-secondary ms-3" data-bs-toggle="modal" data-bs-target="#searchModal">Add Music</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Add Music Modal -->
                    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="searchModalLabel">Search Music</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="text" id="searchTerm" class="form-control" placeholder="Search for a song">
                                    <ul id="searchResults" class="list-group mt-2"></ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body px-0">
                                <div class="table-responsive">
                                    <table class="table mb-0">
                                        <thead>
                                            <tr>
                                                <th scope="col">No.</th>
                                                <th scope="col">Artist</th>
                                                <th scope="col">Album</th>
                                                <th scope="col">Time</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="playlistTableBody">
                                            <!-- Playlist songs will be listed here -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <script>
            // Arama işlemi
            document.getElementById('searchTerm').addEventListener('input', function() {
                var searchTerm = this.value;
                // Burada şarkı arama API'si ile veri getireceksiniz
                // Örnek olarak hardcoded bir liste ekliyorum
                var searchResults = [
                    { id: 1, name: "Song 1", artist: "Artist 1", album: "Album 1", time: "03:20" },
                    { id: 2, name: "Song 2", artist: "Artist 2", album: "Album 2", time: "02:50" },
                ];
                var results = searchResults.filter(song => song.name.toLowerCase().includes(searchTerm.toLowerCase()));
                var resultsHtml = results.map(song => `
                    <li class="list-group-item" style="cursor: pointer;" onclick="selectMusic(${song.id}, '${song.name}', '${song.artist}', '${song.album}', '${song.time}')">
                        ${song.name} - ${song.artist}
                    </li>
                `).join('');
                document.getElementById('searchResults').innerHTML = resultsHtml;
            });

            // Şarkı seçme işlemi
            function selectMusic(id, name, artist, album, time) {
                var row = document.createElement('tr');
                row.innerHTML = `
                    <td></td>
                    <td>${artist}</td>
                    <td>${album}</td>
                    <td>${time}</td>
                    <td><button class="btn btn-danger" onclick="removeMusic(this)">Remove</button></td>
                `;
                document.getElementById('playlistTableBody').appendChild(row);

                // Modal'ı kapat
                var modal = new bootstrap.Modal(document.getElementById('searchModal'));
                modal.hide();
            }

            // Şarkı çıkarma işlemi
            function removeMusic(button) {
                button.closest('tr').remove();
            }
        </script>
    </body>
</html>