<!doctype html>
<html lang="en" dir="ltr">
    <head>
        <!-- Required Meta Tags -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>
    <body>
        <!-- Loader Start -->
        <div id="loading">
            <div class="loader simple-loader">
                <div class="loader-body">
                    <img src="../assets/images/loader.gif" alt="loader" class="img-fluid">
                </div>
            </div>
        </div>
        <!-- Loader End -->

        <div class="sidebar-body pt-0 data-scrollbar">
            <div class="sidebar-list"></div>
            <div class="sidebar-footer"></div>
        </div>

        <main class="main-content">
            <div class="position-relative">
                <div class="content-inner container-fluid pb-0" id="page_layout">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="card mb-0 bg-soft-secondary">
                                                <img src="../assets/images/dashboard/01.png" class="img-fluid w-100" alt="">
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="d-flex align-items-top justify-content-between">
                                                <div class="music-detail">
                                                    <h3 class="mb-3">Eliana D’cruz Playlist</h3>
                                                    <p class="mb-3">Search for your favorite music, create a playlist and save it.</p>
                                                    <div class="d-flex align-items-center mb-4">
                                                        <h6 class="ps-3 fw-bold me-3 border-start">Tracks: <span id="trackCount">0</span></h6>
                                                    </div>
                                                    <div class="d-flex align-items-center">
                                                        <a href="javascript:void(0);" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#searchModal">Add Music</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Add Music Modal -->
                    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="searchModalLabel">Search Music</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="text" id="searchTerm" class="form-control" placeholder="Search for a song">
                                    <ul id="searchResults" class="list-group mt-2"></ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body px-0">
                                <div class="table-responsive">
                                    <table class="table mb-0">
                                        <thead>
                                            <tr>
                                                <th scope="col">Artist</th>
                                                <th scope="col">Album</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="playlistTableBody">
                                            <!-- Playlist songs will be listed here -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <script>
            var trackCount = 0;  // Tracks sayısını tutan değişken

            // Arama işlemi
            document.getElementById('searchTerm').addEventListener('input', function() {
                var searchTerm = this.value;

                // AJAX ile arama
                $.ajax({
                    url: '@Url.Action("SearchMusic", "Music")',
                    type: 'GET',
                    data: { searchTerm: searchTerm },
                    success: function(response) {
                        var resultsHtml = response.map(function(song) {
                            return `
                                <li class="list-group-item" style="cursor: pointer;" onclick="selectMusic(${song.musicId}, '${song.title}', '${song.artist}', '${song.filename}')">
                                    ${song.title} - ${song.artist}
                                </li>
                            `;
                        }).join('');
                        document.getElementById('searchResults').innerHTML = resultsHtml;
                    }
                });
            });

            // Şarkı seçme işlemi
            function selectMusic(id, title, artist, filename) {
                var row = document.createElement('tr');
                row.innerHTML = `
                    <td>${artist}</td>
                    <td>${title}</td>
                    <td>
                        <button class="btn btn-success" onclick="saveMusic(this)">Save</button>
                        <button class="btn btn-danger" onclick="removeMusic(this)">Delete</button>
                    </td>
                `;
                document.getElementById('playlistTableBody').appendChild(row);

                trackCount++;  // Track sayısını artır
                document.getElementById('trackCount').innerText = trackCount;  // Sayıyı güncelle

                var modal = new bootstrap.Modal(document.getElementById('searchModal'));
                modal.hide();
            }

            // Şarkıyı kaydetme
            function saveMusic(button) {
                alert('Music Saved!');
            }

            // Şarkı çıkarma işlemi
            function removeMusic(button) {
                button.closest('tr').remove();

                trackCount--;  // Track sayısını azalt
                document.getElementById('trackCount').innerText = trackCount;  // Sayıyı güncelle
            }
        </script>
    </body>
</html>
