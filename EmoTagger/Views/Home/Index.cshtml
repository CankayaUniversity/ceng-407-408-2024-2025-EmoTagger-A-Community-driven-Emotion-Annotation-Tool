@{
    ViewData["Title"] = "Home - EmoTagger";
}
<link rel="stylesheet" href="~/css/indexx.css">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4 animated fadeIn neon-text">Discover Music with Emotions</h1>
                    <p class="lead mb-4 animated fadeIn delay-1">EmoTagger is an innovative platform that redefines your music experience through emotions. Explore songs by their emotional dimension and feel the music.</p>
                    <div class="d-flex gap-3 justify-content-center animated fadeIn delay-2">
                        <a asp-controller="Dashboard" asp-action="ListenTag" class="btn btn-primary btn-lg pulse-btn">
                            <i class="fas fa-headphones me-2"></i> Get Started Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container">
            <div class="text-center mb-4 section-header">
                <h2 class="fw-bold">Experience Music with Emotions</h2>
                <div class="divider mx-auto"></div>
                <p class="lead text-muted">Every piece of music carries an emotion. Discover these emotions with EmoTagger.</p>
            </div>

            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3">
                                <i class="fas fa-headphones-alt"></i>
                            </div>
                            <h4 class="card-title">Listen & Tag</h4>
                            <p class="card-text">Listen to songs in different emotional categories and add your own emotional tags.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-success bg-gradient text-white rounded-circle mb-3">
                                <i class="fas fa-heart"></i>
                            </div>
                            <h4 class="card-title">Create Your Favorites</h4>
                            <p class="card-text">Add your favorite songs to your favorites and create a personal music library.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-info bg-gradient text-white rounded-circle mb-3">
                                <i class="fas fa-compact-disc"></i>
                            </div>
                            <h4 class="card-title">Playlists</h4>
                            <p class="card-text">Create special playlists according to your mood and enjoy a music experience that matches your emotions.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How it Works Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-4 section-header">
                <h2 class="fw-bold">How Does It Work?</h2>
                <div class="divider mx-auto"></div>
                <p class="lead text-muted">Personalizing your music experience with EmoTagger is very easy.</p>
            </div>

            <div class="row g-4 justify-content-center">
                <div class="col-md-3">
                    <div class="text-center process-card">
                        <div class="step-circle bg-primary text-white mb-3 mx-auto">1</div>
                        <h4>Sign Up</h4>
                        <p class="text-muted">Sign up quickly and join our platform.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center process-card">
                        <div class="step-circle bg-primary text-white mb-3 mx-auto">2</div>
                        <h4>Listen to Music</h4>
                        <p class="text-muted">Discover and listen to songs in different categories.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center process-card">
                        <div class="step-circle bg-primary text-white mb-3 mx-auto">3</div>
                        <h4>Tag Emotions</h4>
                        <p class="text-muted">Add appropriate emotion tags to the songs you listen to.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center process-card">
                        <div class="step-circle bg-primary text-white mb-3 mx-auto">4</div>
                        <h4>Keep Exploring</h4>
                        <p class="text-muted">Discover more songs and enhance your music experience.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-4 section-header">
                <h2 class="fw-bold">What Do Our Users Say?</h2>
                <div class="divider mx-auto"></div>
                <p class="lead text-muted">Experiences of EmoTagger users.</p>
            </div>

            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 testimonial-card">
                        <div class="card-body p-4 text-center">
                            <div class="testimonial-avatar mb-3">
                                <img src="~/assets/images/testimonials/user1.jpg" alt="User" class="rounded-circle mx-auto" width="80">
                            </div>
                            <h5 class="mb-0">Mehmet Y.</h5>
                            <div class="text-warning mb-3">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <p class="card-text">"Thanks to EmoTagger, I discovered music on an emotional level. Now it's much easier to listen to music according to my mood!"</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 testimonial-card">
                        <div class="card-body p-4 text-center">
                            <div class="testimonial-avatar mb-3">
                                <img src="~/assets/images/testimonials/user2.jpg" alt="User" class="rounded-circle mx-auto" width="80">
                            </div>
                            <h5 class="mb-0">Ayşe K.</h5>
                            <div class="text-warning mb-3">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                            </div>
                            <p class="card-text">"I love listening to music and EmoTagger made this experience even more enjoyable."</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 testimonial-card">
                        <div class="card-body p-4 text-center">
                            <div class="testimonial-avatar mb-3">
                                <img src="~/assets/images/testimonials/user3.jpg" alt="User" class="rounded-circle mx-auto" width="80">
                            </div>
                            <h5 class="mb-0">Emre S.</h5>
                            <div class="text-warning mb-3">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <p class="card-text">"This platform has completely changed my understanding of music. Now I don't just listen to songs, I also experience them emotionally."</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-5">
        <div class="container">
            <div class="cta-section rounded-4 p-5 text-center text-white">
                <h2 class="fw-bold mb-3 animated pulse neon-text">Step into the World of Music with Emotions</h2>
                <p class="lead mb-4">Sign up now and discover thousands of songs with their emotional dimensions.</p>
            </div>
        </div>
    </section>
</div>