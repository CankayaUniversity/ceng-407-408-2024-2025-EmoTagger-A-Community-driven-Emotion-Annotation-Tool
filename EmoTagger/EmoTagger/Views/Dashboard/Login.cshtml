@model EmoTagger.Models.User

@{
    Layout = null;
}

<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Emo Tagger - Login</title>

    <link rel="shortcut icon" href="~/assets/images/logo2.png">
    <link rel="stylesheet" href="~/assets/css/core/libs.min.css">
    <link rel="stylesheet" href="~/assets/css/muzik.min.css?v=1.0.1">
    <link rel="stylesheet" href="~/assets/css/custom.min.css?v=1.0.1">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- jQuery eklendi -->

    <link rel="stylesheet" href="~/css/login.css">
</head>

<body>
    <div class="wrapper">
        <!-- Background animations -->
        <div class="bg-animations" id="bgAnimations">
            <!-- Music notes and letters will be added via JS -->
        </div>

        <!-- Dancing Pandas in corners -->
        <div class="dancing-panda top-left">
            <div class="panda-face">
                <div class="panda-eyes eye-left"></div>
                <div class="panda-eyes eye-right"></div>
                <div class="panda-nose"></div>
                <div class="panda-mouth"></div>
            </div>
            <div class="panda-ears ear-left"></div>
            <div class="panda-ears ear-right"></div>
            <div class="panda-hands hand-left"></div>
            <div class="panda-hands hand-right"></div>
            <div class="panda-feet foot-left"></div>
            <div class="panda-feet foot-right"></div>
        </div>

        <div class="dancing-panda top-right">
            <div class="panda-face">
                <div class="panda-eyes eye-left"></div>
                <div class="panda-eyes eye-right"></div>
                <div class="panda-nose"></div>
                <div class="panda-mouth"></div>
            </div>
            <div class="panda-ears ear-left"></div>
            <div class="panda-ears ear-right"></div>
            <div class="panda-hands hand-left"></div>
            <div class="panda-hands hand-right"></div>
            <div class="panda-feet foot-left"></div>
            <div class="panda-feet foot-right"></div>
        </div>

        <div class="dancing-panda bottom-left">
            <div class="panda-face">
                <div class="panda-eyes eye-left"></div>
                <div class="panda-eyes eye-right"></div>
                <div class="panda-nose"></div>
                <div class="panda-mouth"></div>
            </div>
            <div class="panda-ears ear-left"></div>
            <div class="panda-ears ear-right"></div>
            <div class="panda-hands hand-left"></div>
            <div class="panda-hands hand-right"></div>
            <div class="panda-feet foot-left"></div>
            <div class="panda-feet foot-right"></div>
        </div>

        <div class="dancing-panda bottom-right">
            <div class="panda-face">
                <div class="panda-eyes eye-left"></div>
                <div class="panda-eyes eye-right"></div>
                <div class="panda-nose"></div>
                <div class="panda-mouth"></div>
            </div>
            <div class="panda-ears ear-left"></div>
            <div class="panda-ears ear-right"></div>
            <div class="panda-hands hand-left"></div>
            <div class="panda-hands hand-right"></div>
            <div class="panda-feet foot-left"></div>
            <div class="panda-feet foot-right"></div>
        </div>

        <section class="login-content overflow-hidden">
            <div class="row no-gutters align-items-center bg-white">
                <div class="col-md-12 align-self-center">
                    <div class="row justify-content-center pt-5">
                        <div class="col-md-6">
                            <div class="card auth-card">
                                <div class="card-body">
                                    <div class="text-center logo-inside-card">
                                        <img src="~/assets/images/logo2.png" alt="Logo" class="img-fluid" width="180">
                                    </div>
                                    <h2 class="mb-2 text-center">Sign In</h2>
                                    <p class="text-center">Login to stay connected.</p>

                                    <form id="loginForm">
                                        <div class="form-group">
                                            <label for="email" class="form-label">Email</label>
                                            <input type="email" class="form-control" id="email" placeholder="xyz@example.com" required>
                                        </div>

                                        <div class="form-group">
                                            <label for="password" class="form-label">Password</label>
                                            <input type="password" class="form-control" id="password" placeholder="Enter your password" required>
                                        </div>

                                        <div class="d-flex justify-content-between">
                                            <div class="form-check mb-3">
                                                <input type="checkbox" class="form-check-input" id="rememberMe">
                                                <label class="form-check-label" for="rememberMe">Remember Me</label>
                                            </div>
                                            <a asp-controller="Dashboard" asp-action="ForgotPassword">Forgot Password?</a>
                                        </div>

                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn btn-primary">Sign In</button>
                                        </div>
                                    </form>

                                    <!-- Başarı / Hata Mesajı -->
                                    <div id="loginMessage" class="alert d-none mt-3"></div>

                                    <p class="mt-3 text-center">
                                        Don't have an account? <a href="@Url.Action("Register", "Dashboard")" class="text-underline">Sign Up</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Welcome message at the bottom -->
        <div class="welcome-message">
            Welcome to the magical world of music.
        </div>
    </div>

    <script>
        // Create floating music notes and words animation
        document.addEventListener('DOMContentLoaded', function() {
            const bgAnimations = document.getElementById('bgAnimations');
            const musicNotes = ['♪', '♫', '♬', '♩', '♭', '♮', '🎵', '🎶', '🎼', '🎸', '🎹', '🎷', '🎺', '🎻'];
            const musicWords = ['MUSIC', 'BEATS', 'RHYTHM', 'MELODY', 'SONG', 'TUNE', 'HARMONY', 'GROOVE'];
            const colorClasses = ['color1', 'color2', 'color3', 'color4', 'color5', 'color6', 'color7', 'color8'];

            // Create 60 floating elements (more notes)
            for (let i = 0; i < 60; i++) {
                const element = document.createElement('div');
                element.className = 'note ' + colorClasses[Math.floor(Math.random() * colorClasses.length)];

                // Add sparkle animation to some notes
                if (Math.random() > 0.7) {
                    element.style.animation = 'float 15s linear infinite, sparkle 2s ease-in-out infinite';
                }

                // Randomly choose between notes and words
                if (Math.random() > 0.3) {
                    element.innerHTML = musicNotes[Math.floor(Math.random() * musicNotes.length)];
                    element.style.fontSize = Math.random() * 25 + 15 + 'px'; // Bigger notes
                } else {
                    element.innerHTML = musicWords[Math.floor(Math.random() * musicWords.length)];
                    element.style.fontSize = Math.random() * 14 + 10 + 'px';
                }

                // Random position and animation timing
                element.style.left = Math.random() * 100 + 'vw';
                element.style.animationDuration = Math.random() * 25 + 10 + 's';
                element.style.animationDelay = Math.random() * 10 + 's';
                element.style.opacity = Math.random() * 0.7 + 0.3; // More visible

                bgAnimations.appendChild(element);
            }

            // Password peek animation with panda
            const passwordInput = document.getElementById('password');
            const emailInput = document.getElementById('email');
            const pandaFaces = document.querySelectorAll('.panda-face');

            // When password or email field is in focus, close panda eyes
            passwordInput.addEventListener('focus', function() {
                pandaFaces.forEach(face => {
                    face.classList.add('eyes-closed');
                });
            });

            emailInput.addEventListener('focus', function() {
                pandaFaces.forEach(face => {
                    face.classList.add('eyes-closed');
                });
            });

            // When focus is lost, open eyes again
            passwordInput.addEventListener('blur', function() {
                pandaFaces.forEach(face => {
                    face.classList.remove('eyes-closed');
                });
            });

            emailInput.addEventListener('blur', function() {
                pandaFaces.forEach(face => {
                    face.classList.remove('eyes-closed');
                });
            });
        });

        // Original login code
        $(document).ready(function () {
            $("#loginForm").submit(function (e) {
                e.preventDefault(); // Sayfanın yenilenmesini engelle

                var loginData = {
                    Email: $("#email").val(),
                    Password: $("#password").val()
                };

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Login", "Dashboard")",
                    contentType: "application/json",
                    data: JSON.stringify(loginData),
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl; // Başarılı giriş -> Anasayfaya yönlendir
                        } else {
                            $("#loginMessage").removeClass("d-none alert-success")
                                             .addClass("alert alert-danger")
                                             .text(response.message);
                        }
                    },
                    error: function () {
                        $("#loginMessage").removeClass("d-none alert-success")
                                         .addClass("alert alert-danger")
                                         .text("Bir hata oluştu. Lütfen tekrar deneyin.");
                    }
                });
            });
        });
    </script>
</body>
</html>